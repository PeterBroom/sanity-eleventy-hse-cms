        {% for items in item.content %}
            <p>{{items.title}}</p>
            <p>{{items.url}}</p>

            {% for tag in items.tags %}
                <p>{{tag}}</p>
            {% endfor %}
        {% endfor %}
    {% endfor %} #}
    <div id="playerInfo">
        <div id="videoTabs" class="tabs">
            <ul class="tabs__list">
                <li class="tabs__list-item">
                    <a class="tabs__tab" href="#descPanel">Description</a>
                </li>
                <li class="tabs__list-item">
                    <a class="tabs__tab" href="#transPanel">Transcript</a>
                </li>
                <li class="tabs__list-item">
                    <a class="tabs__tab" href="#relatedPanel">Related media</a>
                </li>
                <li class="tabs__list-item">
                    <a class="tabs__tab" href="#sharePanel">Share</a>
                </li>
            </ul>
            <div class="tabs__panel" id="descPanel">
                <h2>Description</h2>
                {% if component.description %}
                    {{component.description}}
                {% else %}
                    <p>There is no description for this video</p>
                {% endif %}
            </div>
            <div class="tabs__panel" id="transPanel">
                <h2>Transcript</h2>
                {% if component.transcript %}
                    {{component.transcript}}
                {% else %}
                    <p>There is no transcript for this video</p>
                {% endif %}
            </div>
            <div class="tabs__panel" id="relatedPanel">
                <h2>Related Media</h2>

                {% if relatedMedia.tags.related %}
                    {{relatedMedia.tags.related}}
                {% else %}
                    <p>There is no related media for this video</p>
                {% endif %}
            </div>
            <div class="tabs__panel" id="sharePanel">
                <h2>Share</h2>
