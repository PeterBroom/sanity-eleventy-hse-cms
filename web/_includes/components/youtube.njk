                </div>
                <div id="copyEmbed"></div>
                <div id="linkContent">
                    <p>Link directly to &quot;{{component.title}}&quot; <span class="visually-hidden">video</span>:</p>
                    <p>https://www.youtube.com/embed/{{component.url}}</p>
                </div>

                <div id ="emailerForm">
                    <form action="http://streamservice.sc-streaming.com/backend/hseVidEmailer.aspx" method="post" class="emailer">
                        <div class="form-group">
                            <label class="label" for='formName'>Your name:</label>
                            <input class="input input-text" type='text' name='formName' id='formName' maxlength='200'/>
                        </div>
                        <div class="form-group">

                            <label class="label" for="formEmail">Send video to:</label>
                            <input class="input input-text" type="text" name="formEmail" id="formEmail" maxlength='200'/>
                        </div>
                        <div class="form-group">
                            <label class="label" for="formMsg">Additional Comments (optional):</label>
                            <textarea name="formMsg" id="formMsg" class="textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" id="formLink" name="formLink" value="{{component.url}}"/>
                            <input type="hidden" id="formTitle" name="formTitle" value="{{component.title}}"/>
                        </div>
                        <div class="form-group">
                            <input value="Submit" type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-primary"/>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>